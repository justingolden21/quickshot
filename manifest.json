{
  "name": "QuickShot",
  
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "MacCtrl+Shift+Z"
      }
    }
  },
  
  "options_page": "options.html",
  
  "version": "1.0",
  "description": "Take a screenshot with the click of a button",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "camera.png",
    "default_title": "Click to take a screenshot..."
  },
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 2
}
